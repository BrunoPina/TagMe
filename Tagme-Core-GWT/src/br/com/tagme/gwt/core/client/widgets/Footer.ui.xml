<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:h="urn:import:org.gwtbootstrap3.client.ui.html">
	
	<ui:with field="res" type="br.com.tagme.gwt.theme.tagme.client.CommonImagesFactory"/>
	
	<b:Container addStyleNames="footer-container" height="40">
		<b:Row height="40">
			<b:Column size="XS_12 SM_12 MD_4">
				<h:Small addStyleNames="footer-text footer-left-text" text="Copyright Â© 2015 Tagme. All rights reserved." />
			</b:Column>

			<b:Column size="XS_12 SM_12 MD_8">
				<b:Row>
					<b:Column size="XS_12 SM_12 MD_2" offset="MD_6">
						<b:Button type="LINK" size="SMALL" text="Enviar Feedback" addStyleNames="footer-text" ui:field="botaoFeedback"/>
					</b:Column>
					<b:Column size="XS_12 SM_12 MD_2">
						<h:Small ui:field="email" addStyleNames="footer-text" text="contato@tagme.info" />
					</b:Column>
					<b:Column size="XS_12 SM_12 MD_2">
						<h:Small ui:field="site" addStyleNames="footer-text" text="www.tagme.info" />					
					</b:Column>
				</b:Row>
			</b:Column>
			
			<b:Modal ui:field="modal" title="Enviar Feedback">
				<b:ModalBody>
					<b:TextArea ui:field="txaFeedback" height="300"/>
				</b:ModalBody>
				<b:ModalFooter>
					<b:Button type="SUCCESS" text="Enviar" dataLoadingText="Enviando..." ui:field="botaoEnviar"/>
					<b:Button type="DANGER" text="Fechar" ui:field="botaoFechar"/>
				</b:ModalFooter>
			</b:Modal>
			
		</b:Row>
		
	</b:Container>
	
</ui:UiBinder> 