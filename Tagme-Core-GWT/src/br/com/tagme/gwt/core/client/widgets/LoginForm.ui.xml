<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	
	<ui:with field="res" type="br.com.tagme.gwt.theme.tagme.client.CommonImagesFactory"/>
	
	<b:Panel addStyleNames="center-block xs-center-block login-panel" marginBottom="0">
		<b:PanelBody>
			<b:Row>
				<b:Column offset="XS_1" size="XS_10">
					<b:Image addStyleNames="center-block logo-loginform img-responsive" ui:field="imgLogo"/>
				</b:Column>
			</b:Row>
			
			
			<g:FormPanel ui:field="loginForm" action="" method="POST">
				<b:FieldSet>
				
					<b:FormGroup>
						<b:InputGroup>
							<b:TextBox addStyleNames="input-lg" placeholder="E-mail" ui:field="username" name="j_username" b:id="username" />
							<b:InputGroupAddon addStyleNames="input-lg-icon" icon="USER"/>
						</b:InputGroup>
					</b:FormGroup>
					
					<b:FormGroup>
						<b:InputGroup>
							<b:Input addStyleNames="input-lg" placeholder="Senha" type="PASSWORD" ui:field="password" name="j_password"  b:id="password" />
							<b:InputGroupAddon addStyleNames="input-lg-icon" icon="LOCK"/>
						</b:InputGroup>
					</b:FormGroup>
					
					<b:FormGroup>
						<b:CheckBox ui:field="remember_me" name="_spring_security_remember_me">Permanecer conectado</b:CheckBox>
					</b:FormGroup>
					
					<b:SubmitButton ui:field="btnLogin" size="LARGE" dataLoadingText="Carregando..." type="PRIMARY" block="true">Login</b:SubmitButton>
					
				</b:FieldSet>
			</g:FormPanel>
			
		</b:PanelBody>
		
		<b:Modal ui:field="modalParceiros" title="E-mail cadastrado em mais de um parceiro">
			<b:ModalBody ui:field="containerGridParceiros"/>
			<b:ModalFooter>
				<b:Button ui:field="botaoEscolherParceiro" type="SUCCESS">Selecionar</b:Button>
				<b:Button type="DANGER" dataDismiss="MODAL">Fechar</b:Button>
			</b:ModalFooter>
		</b:Modal>
		
	</b:Panel>
	
</ui:UiBinder> 