<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.4.0//EN" "http://google-web-toolkit.googlecode.com/svn/tags/2.4.0/distro-source/core/src/gwt-module.dtd">
<module rename-to="gwt">
	
	<define-property name="app.profile" values="jiva,sankhya"/>
	
	<property-provider name="app.profile">
		<![CDATA[
		    return $wnd.appProfile;
		]]>
	</property-provider>

	<inherits name="com.google.gwt.user.User" />
	<inherits name="com.google.gwt.xml.XML" />
	<inherits name="com.google.gwt.activity.Activity" />
	<inherits name="com.google.gwt.regexp.RegExp"/>
	<inherits name='com.google.gwt.dom.DOM' />
	<inherits name="com.google.gwt.http.HTTP" />
	
	<inherits name="br.com.sankhya.place.gwt.commons.Commons" />
	<inherits name="br.com.sankhya.place.gwt.mvp.MVP" />
	<inherits name="br.com.sankhya.place.gwt.http.HTTP" />
	<inherits name="br.com.tagme.gwt.theme.tagme.ThemeSankhya" />
	<inherits name="br.com.sankhya.place.gwt.theme.sankhya.ThemeSankhya" />
	<inherits name="br.com.sankhya.place.gwt.theme.jiva.ThemeJiva" />
	<inherits name="br.com.sankhya.place.gwt.auth.Auth" />
	
	<inherits name="org.gwtbootstrap3.GwtBootstrap3NoTheme"/>
	<inherits name="org.gwtbootstrap3.extras.datetimepicker.DateTimePicker"/>
	<inherits name="org.gwtbootstrap3.extras.toggleswitch.ToggleSwitch"/>
	<inherits name="org.gwtbootstrap3.extras.select.Select"/>
	<inherits name="org.gwtbootstrap3.extras.card.Card"/>
	<inherits name="org.gwtbootstrap3.extras.growl.Growl"/>
	<inherits name="org.gwtbootstrap3.extras.summernote.Summernote"/>
	<inherits name="org.gwtbootstrap3.extras.typeahead.Typeahead"/>
	
	<inherits name="com.teknonsys.RetinaImages"/>
	
	<public path="externalresource" />
	
	<entry-point class="br.com.tagme.gwt.core.client.CoreEntryPoint" />	
	
	<replace-with class="br.com.tagme.gwt.theme.tagme.client.CommonImagesRetinaFactory">
		<when-type-is class="br.com.tagme.gwt.theme.tagme.client.CommonImagesFactory"/>
		<all>
			<when-property-is name="app.profile" value="sankhya"/>
			<when-property-is name="display.type" value="retina"/>
		</all>
	</replace-with>
</module>